<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_draw_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="popfisher.androiddrawclassic.DrawMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/second_order_bezier_curve"
            style="@style/button_style_white_bg"
            android:text="@string/second_order_bezier_curve"/>
        <Button
            android:id="@+id/gradient_fill_circle"
            style="@style/button_style_white_bg"
            android:text="@string/gradient_fill_circle"/>
    </LinearLayout>
</ScrollView>
